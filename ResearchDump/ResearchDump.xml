<GuiXml>
  <Controls>
    <TopLevelControl name="ResearchDumpWindow" clampedToScreen="true" movable="true" mouseEnabled="true" hidden="true">
      <Dimensions x="760" y="520" />
      <Anchor point="TOPRIGHT" relativeTo="GuiRoot" offsetX="-50" offsetY="80" />
      <Controls>
        <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" />

        <Label name="$(parent)Title" font="ZoFontWinH1"
               color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_HIGHLIGHT"
               text="ResearchDump">
          <Anchor point="TOPLEFT" offsetX="12" offsetY="12"/>
          <Anchor point="TOPRIGHT" offsetX="-12" offsetY="12"/>
        </Label>

        <!-- Section: Research / Traits -->
        <Label name="$(parent)ResearchHeader" font="ZoFontWinH3" text="Research / Traits">
          <Anchor point="TOPLEFT" relativeTo="$(parent)Title" relativePoint="BOTTOMLEFT" offsetY="12"/>
          <Anchor point="TOPRIGHT" relativeTo="$(parent)Title" relativePoint="BOTTOMRIGHT" offsetY="12"/>
        </Label>

        <!-- Use exactly TWO anchors: TOPLEFT + BOTTOMRIGHT -->
        <Scroll name="$(parent)ResearchScroll">
          <Anchor point="TOPLEFT"  relativeTo="$(parent)ResearchHeader" relativePoint="BOTTOMLEFT" offsetY="8"/>
          <!-- leave room at the bottom for the Skills section by pulling the BR up by ~220 px -->
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" offsetX="-12" offsetY="-232"/>
          <Controls>
            <Label name="ResearchDumpWindowBodyResearch" font="ZoFontGame" width="720">
              <Anchor point="TOPLEFT" offsetX="8" offsetY="8"/>
            </Label>
          </Controls>
        </Scroll>

        <!-- Section: Tradeskill Levels -->
        <Label name="$(parent)SkillsHeader" font="ZoFontWinH3" text="Crafting Skill Levels">
          <Anchor point="TOPLEFT"  relativeTo="$(parent)ResearchScroll" relativePoint="BOTTOMLEFT" offsetY="12"/>
          <Anchor point="TOPRIGHT" relativeTo="$(parent)ResearchScroll" relativePoint="BOTTOMRIGHT" offsetY="12"/>
        </Label>

        <Backdrop name="$(parent)SkillsBG" inherits="ZO_DefaultBackdrop">
          <Anchor point="TOPLEFT"  relativeTo="$(parent)SkillsHeader" relativePoint="BOTTOMLEFT" offsetY="8" />
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" offsetX="-12" offsetY="-12" />
        </Backdrop>

        <Label name="ResearchDumpWindowBodySkills" font="ZoFontGame" width="720">
          <Anchor point="TOPLEFT" relativeTo="$(parent)SkillsHeader" relativePoint="BOTTOMLEFT" offsetX="8" offsetY="14"/>
        </Label>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
